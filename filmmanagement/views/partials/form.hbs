<form action="/api/films" method="POST" id="add_user">
                    <div class="new_user">
                        <div class="form-group">
                            <label for="name" class="text-light">Name of Film</label>
                            <input type="text" name="name"  placeholder="Name of Film">
                        </div>
                        
                        <div class="form-group">
                            <label for="year" class="text-light">Year of Release</label>
                            <input type="text" name="yearOfRelease"  placeholder="Year of Release">
                        </div>

                        <div class="form-group">
                            <label for="genre" class="text-light">Genre</label>
                            <div class="radio inline">
                                <input type="radio" name="genre" value="Action">
                                <label for="genre" class="text-light"></label> 
                                <select name="genre" id="genre">
                                    <option value="action">Action</option>
                                    <option value="drama">Drama</option>
                                    <option value="documentary">Documentary</option>
                                    <option value="romance">Romance</option>
                                    <option value="thriller">Thriller</option>
                                    <option value="horror">Horror</option>
                                    <option value="comedy">Commedy</option>
                                    <option value="sci-fi">Sci-Fi</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="status" class="text-light">Status</label>
                            <div class="radio inline">
                                <input type="radio" id="radio-2" name="status" value="Released">
                                <label for="radio-2" class="radio-label">Released</label> 
                            </div>
                            <div class="radio inline">
                                <input type="radio" id="radio-3" name="status" value="Unreleased">
                                <label for="radio-3" class="radio-label">Unreleased</label> 
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn text-dark update">Save</button>
                        </div>
                        
                    </div>
                    
                </form>